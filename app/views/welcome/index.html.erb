
<div class="row">
	<div class="header col-md-offset-3 col-md-6">
		<h1>Trending in {{locationName}}</h1>
		<form class="form-inline">
			<div class="form-group form_search">
		    <input  ng-model="searchLocation" placeholder="Type City or Country" type="text" class="form-control search" id="exampleInputEmail1">
		  </div>
			<button ng-click="findTrendsInLocation()" class="btn btn-primary btn-lg">
				Find Trends
			</button>
		</form>
	</div>
</div>

<div class="row topics">
	<div ng-repeat="topic in topics">
		<div class="list-group">
		  <a href="{topic.url}}" class="list-group-item active">
		    <h4 class="list-group-item-heading">{{topic.name}}</h4>
		  </a>
		  <div ng-repeat="status in relatedTweets[topic.name]">
			  <a href="" class="list-group-item">
			    <p ng-bind-html="status.text | linky" class="list-group-item-text">{{status.text}}</p>
			  </a>
			</div>
		</div>
	</div>
</div>

